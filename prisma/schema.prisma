generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StockData {
  id        Int      @id @default(autoincrement())
  symbol    String
  open      Float
  high      Float
  low       Float
  volume    Int
  adjClose  Float
  close     Float    @map("price")
  timestamp DateTime @default(now())

  @@index([symbol])
  @@index([timestamp])
}

model Feedback {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  comment   String
  createdAt DateTime @default(now())

  @@index([createdAt])
}
